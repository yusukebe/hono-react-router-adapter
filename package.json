{
  "name": "hono-remix-adapter",
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "test": "npm run test:e2e",
    "test:e2e": "npm run test:e2e -w example",
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "eslint src example/app example/server",
    "lint:fix": "eslint src example/app example/server --fix",
    "publint": "publint",
    "prerelease": "npm run build && npm run test",
    "release": "np"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "/",
    "./example"
  ],
  "exports": {
    "./vite": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js"
    },
    "./cloudflare-pages": {
      "types": "./dist/adapters/cloudflare-pages.d.ts",
      "import": "./dist/adapters/cloudflare-pages.js"
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yusukebe/hono-remix-adapter.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.23",
    "@cloudflare/workers-types": "^4.20240815.0",
    "@hono/eslint-config": "^1.0.1",
    "eslint": "^9.10.0",
    "hono": "^4.5.11",
    "np": "^10.0.7",
    "publint": "^0.2.10",
    "tsup": "^8.2.4",
    "vite": "^5.4.3",
    "vitest": "1.5.0"
  },
  "peerDependencies": {
    "hono": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/vite-dev-server": "^0.16.0",
    "@remix-run/cloudflare": "^2.11.2",
    "remix-hono": "^0.0.16"
  }
}